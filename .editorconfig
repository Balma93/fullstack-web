# .editorconfig for C# projects

# main cofngi file
root = true

# apply on all files
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# specific rules for C# files 
[*.cs]
# brackets style
csharp_new_line_before_open_brace = all